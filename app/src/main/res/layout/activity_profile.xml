<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_anchorGravity="center"
    tools:context="com.ytosko.bloodhub.profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|start|top"
            android:gravity="center|start|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="66dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:foregroundGravity="center"
                    app:srcCompat="@drawable/ic_icin_b" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:orientation="horizontal">


                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="163dp"
                        android:layout_height="match_parent"
                        android:autoText="true"
                        android:editable="false"
                        android:freezesText="true"
                        android:gravity="center_horizontal|left|center_vertical"
                        android:text="Name : "
                        android:textColor="#020469"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="239dp"
                        android:layout_height="match_parent"
                        android:editable="false"
                        android:gravity="center_horizontal|left|center_vertical"
                        android:textColor="#FB8C00"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="17dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:autoText="true"
                        android:editable="false"
                        android:freezesText="true"
                        android:gravity="center_horizontal|left|center_vertical"
                        android:text="Email : "
                        android:textColor="#020469"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/email1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:editable="false"
                        android:gravity="center_horizontal|left|center_vertical"
                        android:textColor="#FB8C00"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="17dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:autoText="true"
                        android:editable="false"
                        android:freezesText="true"
                        android:gravity="center_horizontal|left|center_vertical"
                        android:text="Age : "
                        android:textColor="#020469"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/age1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:editable="false"
                        android:gravity="center_horizontal|left|center_vertical"
                        android:textColor="#FB8C00"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="17dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:autoText="true"
                        android:editable="false"
                        android:freezesText="true"
                        android:gravity="center_horizontal|left|center_vertical"
                        android:text="Blood Group : "
                        android:textColor="#020469"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/blood1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:editable="false"
                        android:gravity="center|left"
                        android:textColor="#FB8C00"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="17dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="165dp"
                        android:layout_height="match_parent"
                        android:autoText="true"
                        android:editable="false"
                        android:freezesText="true"
                        android:gravity="center_horizontal|left|center_vertical"
                        android:text="Location : "
                        android:textColor="#020469"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/local1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:editable="false"
                        android:gravity="center|left"
                        android:textColor="#FB8C00"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="17dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="166dp"
                        android:layout_height="match_parent"
                        android:autoText="true"
                        android:editable="false"
                        android:freezesText="true"
                        android:gravity="center_horizontal|left|center_vertical"
                        android:text="Contact no : "
                        android:textColor="#020469"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mumber1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:editable="false"
                        android:gravity="center|left"
                        android:textColor="#FB8C00"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="17dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="166dp"
                        android:layout_height="match_parent"
                        android:freezesText="true"
                        android:gravity="center_horizontal|left|center_vertical"
                        android:text="Type : "
                        android:textColor="#020469"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/typee"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:textColor="#FB8C00"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="17dp"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="26dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|center"
                    android:layout_weight="1"
                    android:foregroundGravity="bottom|center"
                    android:gravity="bottom|center"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_gravity="end"
                        android:foregroundGravity="bottom" />

                    <Button
                        android:id="@+id/upd1"
                        android:layout_width="131dp"
                        android:layout_height="133dp"
                        android:layout_gravity="bottom|center"
                        android:layout_weight="1"
                        android:background="@drawable/round6"
                        android:foregroundGravity="bottom|center"
                        android:gravity="center"
                        android:text="Update\nProfile"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textDirection="anyRtl"
                        android:textIsSelectable="false"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>